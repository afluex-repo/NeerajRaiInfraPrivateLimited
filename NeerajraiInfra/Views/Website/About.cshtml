@model NeerajraiInfra.Models.Website

@{
    ViewBag.Title = "Company Profile";
    Layout = "~/Views/Shared/WebsiteLayout.cshtml";
}

<!-- Start Page Banner Area -->
<div class="page-banner-area">
    <div class="container">
        <div class="page-banner-content wow animate__animated animate__fadeInLeft" data-wow-delay="300ms" data-wow-duration="2000ms">
            <h2>About Us</h2>

            <ul>
                <li>
                    <a href="~/Website/Index">Home</a>
                </li>
                <li>About Us</li>
            </ul>
        </div>
    </div>

    <div class="page-banner-image wow animate__animated animate__fadeInRightight" data-wow-delay="300ms" data-wow-duration="2000ms">
        <img src="/WebsiteCss/assets/images/page-banner.png" alt="image">
    </div>
</div>
<!-- End Page Banner Area -->
<!-- Start About Area -->
<div class="about-area ptb-100">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-lg-6 col-md-12">
                <div class="about-image">
                    <div class="row justify-content-center">
                        <div class="col-lg-6 col-sm-6 col-md-6 col-6">
                            <div class="image">
                                <img src="/WebsiteCss/assets/images/main-slides/banner_1.jpg" class="about_img" alt="image">
                            </div>
                        </div>

                        <div class="col-lg-6 col-sm-6 col-md-6 col-6">
                            <div class="image">
                                <img src="/WebsiteCss/assets/images/main-slides/banner_2.jpg" class="about_img" alt="image">
                            </div>
                        </div>

                        <div class="col-lg-6 col-sm-6 col-md-6 col-6">
                            <div class="image">
                                <img src="/WebsiteCss/assets/images/main-slides/banner_5.jpg" class="about_img" alt="image">
                            </div>
                        </div>

                        <div class="col-lg-6 col-sm-6 col-md-6 col-6">
                            <div class="image">
                                <img src="/WebsiteCss/assets/images/main-slides/banner_4.jpg" class="about_img" alt="image">
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="col-lg-6 col-md-12">
                <div class="about-content">
                    <h3>Our Motive is to Provide Best for All and Fulfill their Desire</h3>
                    <p>The company offers professional work culture and time-bound services and deals in all kinds of properties. We work on residential, commercial and retail projects among others and best low budget row houses in Lucknow.</p>

                    <div class="about-quote">
                        <p>Selling a plot is still a dream for many. Our mission is to turn these several such dreams into reality.</p>
                        <span><b>Neeraj Rai Infra Private Limited</b></span>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- End About Area -->
<!-- Start Fun Facts Area -->
<div class="fun-facts-area pt-100 pb-70">
    <div class="container">
        <div class="section-title">
            <h3>Our Achievement</h3>
        </div>

        <div class="row justify-content-center">
            <div class="col-lg-4 col-md-6 col-sm-6">
                <div class="single-fun-fact">
                    <h3>
                        <span class="odometer" data-count="1024">00</span>
                        <span class="sign-icon">+</span>
                    </h3>
                    <p>Completed Property</p>
                </div>
            </div>

            <div class="col-lg-4 col-md-6 col-sm-6">
                <div class="single-fun-fact">
                    <h3>
                        <span class="odometer" data-count="1324">00</span>
                        <span class="sign-icon">+</span>
                    </h3>
                    <p>Property Sales</p>
                </div>
            </div>

            <div class="col-lg-4 col-md-6 col-sm-6">
                <div class="single-fun-fact">
                    <h3>
                        <span class="odometer" data-count="1000">00</span>
                        <span class="sign-icon">+</span>
                    </h3>
                    <p>Happy Clients</p>
                </div>
            </div>
        </div>
    </div>
</div>