@model NeerajraiInfra.Models.Reports

@{
    ViewBag.Title = "PayPayout";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


@using (Html.BeginForm("PayPayout", "AdminReports", FormMethod.Post, new { @id = "form1" }))
{
